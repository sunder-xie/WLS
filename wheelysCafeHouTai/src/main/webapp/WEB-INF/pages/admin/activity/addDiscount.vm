  			$("#fullpiece").attr("disabled",true);
  			$("#manyuan").attr("disabled",true);
  			$("#fullpiece").val("")
  			$("#manyuan").val("")
  		}
  	})
  	
 	function selectValue(that){
		var v = $(that).val();
		if(v=='ZHEKOU' || v=='SECONDCUP'){
			$('.cardType').hide();
			$('.cardType_'+'ZHEKOU').show();	
		}else if(v=='FIRSTCUP' || v=='FIXAMOUNT'){
			$('.cardType').hide();
			$('.cardType_'+'FIRSTCUP').show();
		}else{
			$('.cardType').hide();
			$('.cardType_'+v).show();
		}
		if($("select[name='type']").val()=='FIRSTCUP' || $("select[name='type']").val()=='FIXAMOUNT'){
			$("#addpri").show();
		}else{
			$("#addpri").hide();
			$("#addprice").val("");
		}
		
	}
  	//判断是否特浓加价
