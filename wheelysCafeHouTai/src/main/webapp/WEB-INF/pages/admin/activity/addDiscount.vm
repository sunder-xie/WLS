	function submitForm(){
		var isgo = true;
		$('.errMod').remove();
		if($("select[name='type']").val()=='MANJIAN'){
		$('#inputList input').each(function(e,a){
			if($.trim($(a).val())=='' && $(a).attr('data-type')=="must"){
				var html = '<div class="errMod" style="color:#ed2626">选项不能为空</div>';
				$(a).after(html);
				isgo = false;
			}
		 })
		}
		 //名称不能为空格   
		 if($.trim($("#name").val())==""){
				var html = '<div class="errMod" style="color:#ed2626">名称不能为空</div>';
				$("#name").after(html);
				isgo = false;
		 }
		 
		$('#inputList select').each(function(e,a){
			if($(a).val()=='' && $(a).attr('data-type')=="must"){
				var html = '<div class="errMod" style="color:#ed2626">请选择分类</div>';
				$(a).after(html);
				isgo = false;
			}
		 })
		  //判断哪个活动校验相对的输入框
		  $('#inputList input').each(function(e,a){
		  if($("select[name='type']").val()=='ZHEKOU' || $("select[name='type']").val()=='SECONDCUP'){
			if($(a).attr('name') == 'discountrate' && !(/^[1-9][0-9]{0,1}$/.test($.trim($(a).val())))){
				var html = '<div class="errMod" style="color:#ed2626">请输入1-99的数字</div>';
				$(a).after(html);
				isgo = false;
				}
		  	 }
		  if($("select[name='type']").val()=='FIRSTCUP' || $("select[name='type']").val()=='FIXAMOUNT'){
			if($(a).attr('name') == 'fixamount' && !(/^[1-9]\d*$/.test($.trim($(a).val())))){
				var html = '<div class="errMod" style="color:#ed2626">请输入正确的数字</div>';
				$(a).after(html);
				isgo = false;
				}
		  	 }
		  if($("select[name='type']").val()=='MANJIAN'){
			  if($("#manjianId").attr('checked')){
			  if($(a).attr('name') == 'limitcup' && !(/^[1-9][0-9]{0,1}$/.test($.trim($(a).val())))){
				var html = '<div class="errMod" style="color:#ed2626">请输入1-99的数字</div>';
				$(a).after(html);
				isgo = false;
				}
			  }
			  if($("#manyuanId").attr('checked')){
			  if($(a).attr('name') == 'limitamount' && !(/^[1-9]\d*$/.test($.trim($(a).val())))){
				var html = '<div class="errMod" style="color:#ed2626">请输入正确的数字</div>';
				$(a).after(html);
				isgo = false;
				}
			  }
			  if($(a).attr('name') == 'discountamount' && !(/^[1-9]\d{0,2}$/.test($.trim($(a).val())))){
				var html = '<div class="errMod" style="color:#ed2626">请输入1-999的数字</div>';
				$(a).after(html);
				isgo = false;
				}
		  	 }
		  })
		  if($("select[name='type']").val()=='MANJIAN'){
			  if($("#manyuanId").attr('checked')){
				//满元钱数不能小于减得钱数
				  var yuanprice=parseInt($("#manyuan").val());
				  var jianprice=parseInt($("#subyuan").val());
				  if(yuanprice<jianprice){
					 var html = '<div class="errMod" style="color:#ed2626">满元钱数不能小于所减钱数</div>';
					 $("#manyuan").after(html);
					 isgo = false;
				   } 
			  }
		  }
		  
		/*日期校验 */
		 var time1 = $("#time1").val();
		 var time2 = $("#time2").val();
		 var currentTime='$DateUtil.getCurDateStr()';
		 if(time1>time2 || time1<currentTime){
			var html = '<div class="errMod" style="color:#ed2626">请选择正确的日期时间</div>';
			$("#time2").after(html);
		 	isgo = false;
		}
		//时间段校验
		if($("#hour1").val()!="" && $("#hour2").val()!=""){
		 var hour1 = $("#hour1").val();
		 var hour2 = $("#hour2").val();
		 if(hour1>=hour2){
			 var html = '<div class="errMod" style="color:#ed2626">请选择正确的时间段</div>';
			 $("#hour2").after(html);
			 isgo = false;
		 	}
		}
	
		//设置时间段的默认值
		if($("#hour1").val()=="" && $("#hour2").val()==""){
			$("#hour1").val("00:00")
			$("#hour2").val("23:59")
		}
		
		 //判断商品是否为空
		 var cbox = false;
		 $('.productidids input[type="checkbox"]').each(function(e,a){
			 console.info($(a).attr('checked'));
			 if($(a).attr('checked')){
				cbox = true;
			 }
		 }) 
		 if(!cbox){
			 var html = '<div class="errMod" style="color:#ed2626">请选择你所需要的商品</div>';
			 $("#productid").after(html);
			 isgo = false;
		 }
		 //判断商铺是否为空
		 var cbox1 = false;
		 $('.shopidids input[type="checkbox"]').each(function(e,a){
			 if($(a).attr('checked')){
				cbox1 = true;
			 }
		 }) 
		 if(!cbox1){
			 var html = '<div class="errMod" style="color:#ed2626">请选择你所需要的店铺</div>';
			 $("#shopid").after(html);
			 isgo = false;
		 }
		
			
		if(isgo){
			if(confirm("确认提交吗?")){
				submitForm_2();
			}
		}else{
			$('.errMod').each(function(e,a){
				if(e==0){
					var top = $(a).offset().top - 30;
					window.scrollTo('0',top);
				};
			})
			
		  }
		} 
