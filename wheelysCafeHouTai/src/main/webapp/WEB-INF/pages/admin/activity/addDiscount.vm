  		})
  	})
  	$('#allItemID').change(function(){
  		var check = $(this).attr('checked');
  		$('#allClass input[type="checkbox"]').each(function(e,a){
  			$(a).attr('checked',check);
  		})
  	})
  	$('input[name="validitemid"]').change(function(){
  		var check = $(this).attr('checked');
